@model _CurriculumManagerSystem.Models.DeCuongNhiemvu

@{
    ViewData["Title"] = "Edit";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h3 class="titile-table">
                    ĐỀ CƯƠNG NHIỆM VỤ
                </h3>
            </div>
            <div class="body">
                <form class="form-horizontal" asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="dcnv_id" />
                    <div class="row clearfix">
                        <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                            <label asp-for="mahp"> </label><span class="text-danger">*</span>
                        </div>
                        <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                            <div class="form-group">
                                <select required class="form-control show-tick" asp-for="mahp" asp-items="ViewBag.mahp">
                                    @* <option>Vui lòng chọn một </option> *@
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                            <label asp-for="manv"> </label><span class="text-danger">*</span>
                        </div>
                        <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                            <div class="form-group">
                                <select required class="form-control show-tick" asp-for="manv" asp-items="ViewBag.manv">
                                    @* <option>Vui lòng chọn một </option> *@
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-4 col-xs-offset-5">
                            <a asp-action="Index" class="btn btn-default waves-effect">Trở lại</a> |
                            <input type="submit" class="btn btn-primary waves-effect" value="Sửa"></input>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
