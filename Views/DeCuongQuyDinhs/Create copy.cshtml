@model List<Quydinh_Kiemtra>

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h3 class="titile-table">
                    TẠO MỚI ĐỀ CƯƠNG QUY ĐỊNH
                </h3>
            </div>
            <div class="body">
                <form class="form-horizontal" asp-action="createListQD">
                    <table class="table  table-sm">
                        <div class="row clearfix">
                            <thead class="table-info">
                                <tr style="background-color: #84c7c1; color: black;">
                                    <th>Lựa chọn</th>
                                    <th>Tên quyết định và kiểm tra</th>
                                    @* <th>Registration Date</th>
                                        <th>E-mail address</th>
                                        <th>Premium Plan</th> *@
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <label class="custom-control custom-checkbox">
                                                <input type="checkbox" class="custom-control-input" value="@item.maqd" name="arrayDCQD" id="@item.maqd">
                                                <span class="custom-control-indicator"></span>
                                            </label>
                                        </td>
                                        <td>@item.tenqd</td>
                                    </tr>
                                }
                            </tbody>
                        </div>

                    </table>
                    <div class="row clearfix">
                        <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-4 col-xs-offset-5">
                            <a asp-action="Index" class="btn btn-default waves-effect">Trở lại</a> |
                            <button type="submit" class="btn btn-primary waves-effect">Lưu</button>
                        </div>
                    </div>
                </form>
            </div>
           
        </div>
    </div>
</div>

