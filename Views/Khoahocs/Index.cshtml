@model IEnumerable<_CurriculumManagerSystem.Models.Khoahoc>

@{
    ViewData["Title"] = "Index";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h3 class="titile-table">KHÓA HỌC | <a class="near-titile-table" asp-action="create">Thêm</a></h3>
            </div>
            <div class="body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.tenkh)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.nienkhoa)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tenkh)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.nienkhoa)
                                    </td>
                                    <td>
                                        <a class="material-icons" asp-action="Edit" asp-route-id="@item.makh">mode_edit</a>
                                        <a class="material-icons" asp-action="Delete"
                                        asp-route-id="@item.makh">delete_forever</a>
                                        <a type="button" class="btn btn-primary waves-effect" asp-controller="Thoigianhocs" asp-action="getThoikhoabieu"
                                        asp-route-khoahoc="@item.tenkh">Xem thời khóa biểu</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
