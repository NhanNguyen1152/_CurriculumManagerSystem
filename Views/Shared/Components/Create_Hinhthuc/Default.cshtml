@model List<Hinhthuc_Danhgia>
<div class="body">
                <form class="form-horizontal" asp-action="createListHT">
                    <table class="table  table-sm">
                        <div class="row clearfix">
                            <thead class="table-info">
                                <tr style="background-color: #84c7c1; color: black;">
                                    <th>Lựa chọn</th>
                                    <th>Thành phần đánh giá</th>
                                    <th>Hình thức</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <label class="custom-control custom-checkbox">
                                                <input type="checkbox" class="custom-control-input" value="@item.mahtdg" name="arrayDCHT" id="@item.mahtdg">
                                                <span class="custom-control-indicator"></span>
                                            </label>
                                        </td>
                                        <td>@item.thanhphan_danhgia</td>
                                        <td>@item.hinhthuc</td>
                                    </tr>
                                }
                            </tbody>
                        </div>

                    </table>
                    <div class="row clearfix">
                        <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-4 col-xs-offset-5">
                            <a asp-action="Index" class="btn btn-default waves-effect" style="margin-left: 82%;">Trở về trang chủ</a> |
                            <button type="submit" class="btn btn-primary waves-effect">Tạo mới</button>
                        </div>
                    </div>
                </form>
            </div>