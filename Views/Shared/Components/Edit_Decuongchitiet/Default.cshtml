@model _CurriculumManagerSystem.Models.DeCuongchiTiet;
@using Microsoft.AspNetCore.Http;
@using System.Data;
@{
    ViewData["Title"] = "Edit_Decuongchitiet";
}
<div class="body">
    <form class="form-horizontal" asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row clearfix">
            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                <label asp-for="mahp_decuong">Mã học phần <span class="text-danger">*</span></label>
            </div>
            <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                <div class="form-group">
                    <div class="form-line">
                        @* <textarea required asp-for="mahp_decuong" class="form-control"
                            placeholder="Tên
                            học phần tiếng việt"></textarea> *@
                        <input required type="text" asp-for="mahp_decuong" class="form-control"
                            placeholder="Mã học phần">
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                <label asp-for="tenhp_tviet">Tên học phần tiếng việt <span class="text-danger">*</span></label>
            </div>
            <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                <div class="form-group">
                    <div class="form-line">
                        @* <textarea required asp-for="tenhp_tviet" class="form-control"
                            placeholder="Tên
                            học phần tiếng việt"></textarea> *@
                        <input required type="text" asp-for="tenhp_tviet" class="form-control"
                            placeholder="Tên học phần tiếng việt">
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                <label asp-for="tenhp_tanh">Tên học phần tiếng anh <span class="text-danger">*</span></label>
            </div>
            <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                <div class="form-group">

                    <div class="form-line">
                        @* <textarea required asp-for="tenhp_tanh" class="form-control"
                            placeholder="Tên học
                            phần tiếng anh"></textarea> *@
                        <input required type="text" asp-for="tenhp_tanh" class="form-control"
                            placeholder="Tên học phần tiếng anh">
                    </div>

                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                <label asp-for="sotc_lt">Số tín chỉ lý thuyết <span class="text-danger">*</span></label>
            </div>
            <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                <div class="form-group">

                    <div class="form-line">
                        @* <textarea required asp-for="sotc_lt" class="form-control"
                            placeholder="Số tín chỉ
                            lý thuyết"></textarea> *@
                        <input required min="0" max="5" type="number" asp-for="sotc_lt" class="form-control"
                            placeholder="Số tín chỉ lý thuyết">
                    </div>

                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                <label asp-for="sotc_th">Số tín chỉ thực hành <span class="text-danger">*</span></label>
            </div>
            <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                <div class="form-group">

                    <div class="form-line">
                        @* <textarea required asp-for="sotc_th" class="form-control"
                            placeholder="Số tín chỉ
                            thực hành"></textarea> *@
                        <input required min="0" max="10" type="number" asp-for="sotc_th" class="form-control"
                            placeholder="Số tín chỉ thực hành">
                    </div>

                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                <label asp-for="hp_tienquyet">Học phần học trước</label>
            </div>
            <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                <div class="form-group">

                    <div class="form-line">
                        @* <textarea required asp-for="hp_tienquyet"
                            class="form-control"
                            placeholder="Học phần học trước"></textarea> *@
                        <input type="text" asp-for="hp_tienquyet" class="form-control" placeholder="Học phần học trước">
                    </div>

                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                <label asp-for="yeucaukhacvoi_hocphan">Yêu cầu khác với học phần</label>
            </div>
            <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                <div class="form-group">

                    <div class="form-line">
                        @* <textarea required asp-for="yeucaukhacvoi_hocphan"
                            class="form-control"
                            placeholder="Yêu cầu khác với học phần"></textarea> *@
                        <input type="text" asp-for="yeucaukhacvoi_hocphan" class="form-control"
                            placeholder="Yêu cầu khác với học phần">
                    </div>

                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                <label asp-for="tomtat_noidunghocphan">Tóm tắt nội dung học phần <span
                        class="text-danger">*</span></label>
            </div>
            <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                <div class="form-group">

                    <div class="form-line">
                        <textarea required asp-for="tomtat_noidunghocphan" class="form-control"
                            placeholder="Tóm tắt nội dung học phần"></textarea>
                        @* <input type="text" asp-for="tomtat_noidunghocphan"
                            class="form-control"
                            placeholder="Tóm tắt nội dung học phần"> *@
                    </div>

                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                <label asp-for="makkt">Khối kiến thức <span class="text-danger">*</span></label>
            </div>
            <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                <div class="form-group">

                    <select required class="form-control show-tick" asp-for="makkt" asp-items="ViewBag.makkt">
                        <option selected="selected" value="" disabled></option>
                    </select>

                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-4 col-xs-offset-5">
                <a asp-action="Index" class="btn btn-default waves-effect">Trở lại</a> |
                <input type="submit" class="btn btn-primary waves-effect" value="Tạo mới"></input>
            </div>
        </div>
    </form>
</div>