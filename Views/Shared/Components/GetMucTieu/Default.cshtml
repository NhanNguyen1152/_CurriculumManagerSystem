@model IEnumerable<_CurriculumManagerSystem.Models.Muctieu>

<div class="body"> 
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
            <thead>
                <tr>
                    <th>
                        @* @Html.DisplayNameFor(model => model.mahp) *@
                        Đề cương chi tiết
                    </th>
                    <th>
                        @* @Html.DisplayNameFor(model => model.noidung) *@
                        Nội dung
                    </th>
                    <th>
                        @* @Html.DisplayNameFor(model => model.mtchinh) *@
                        Mục tiêu chính
                    </th>
                    <th>
                        @* @Html.DisplayNameFor(model => model.mtphu) *@
                        Mục tiêu phụ
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.mahp
                            @* @Html.DisplayFor(modelItem => item.DeCuongchiTiet.tenhp_tviet) *@
                        </td>
                        <td>
                            @item.noidung
                            @* @Html.DisplayFor(modelItem => item.noidung) *@
                        </td>
                        <td>
                            @item.mtchinh
                            @* @Html.DisplayFor(modelItem => item.mtchinh) *@
                        </td>
                        <td>
                            @item.mtphu
                            @* @Html.DisplayFor(modelItem => item.mtphu) *@
                        </td>
                     
                            <td>
                            <a class="material-icons" asp-controller="DeCuongchiTiets" asp-action="Create" asp-route-id="@item.mamt">mode_edit</a>
                            <a class="material-icons" style="cursor: pointed;" data-toggle="modal"
                            data-target="#exampleModalCenter">delete_forever</a>
                            <form>
                                <div class="modal fade" id="exampleModalCenter">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Xác nhận xóa</h5>
                                                <button type="button" class="close"
                                                    data-dismiss="modal"><span>&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Bạn có chắc muốn xóa không ?</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="submit" class="btn btn-secondary"
                                                    data-dismiss="modal">Đóng</button>
                                                @* <input type="submit" value="Xóa" class="btn btn-primary" /> *@
                                                <button type="submit" class="btn btn-primary waves-effect" asp-controller="DeCuongchiTiets" asp-action="DeleteMucTieu" asp-route-id="@item.mamt">Xóa</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </td>
       
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>