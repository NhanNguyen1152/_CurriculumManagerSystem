@model IEnumerable<_CurriculumManagerSystem.Models.Decuong_Chuongtrinh>
@{
    var i = 0;
}
<div class="body table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    STT
                </th>
                <th>
                    Tên học phần
                </th>
                <th>
                    Mã học phần
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                i++;
                <tr>
                    <td>
                        @i
                    </td>
                    <td>
                        @item.DeCuongchiTiet.tenhp_tviet
                    </td>
                    <td>
                        @item.DeCuongchiTiet.mahp_decuong
                    </td>
                  
                    <td>
                        <a class="material-icons" data-type="confirm" asp-controller="Chuongtrinh_Daotaos"
                        asp-action="DeleteCTDT_decuong" asp-route-id="@item.ma_dc_ct" onclick="return confirm('Bạn chắc chứ?')">delete_forever</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>