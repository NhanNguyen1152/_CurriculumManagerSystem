@model IEnumerable<_CurriculumManagerSystem.Models.Decuong_Quytrinh>
@{
    var i = 0;
}
<div class="body table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    STT
                </th>
                <th>
                    Nội dung
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                i++;
                <tr>
                    <td>
                        @i
                    </td>
                    <td>
                        @item.Quytrinhdaotao_Dieukientotnghiep.noi_dung_quytrinhdieukien
                    </td>
                    <td>
                        
                        @if (ViewData["Title"] == "Create")
                        {
                        <a class="material-icons" data-type="confirm" asp-controller="Chuongtrinh_Daotaos"
                        asp-action="DeleteCTDT_quydinh" asp-route-id="@item.dcht_id" onclick="return confirm('Bạn chắc chứ?')">delete_forever</a>
                        }
                        else
                        {
                           <a class="material-icons" data-type="confirm" asp-controller="Chuongtrinh_Daotaos"
                        asp-action="DeleteCTDT_quydinh_edit" asp-route-id="@item.dcht_id" onclick="return confirm('Bạn chắc chứ?')">delete_forever</a>
                        }
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>