@model IEnumerable<_CurriculumManagerSystem.Models.DeCuongQuyDinh>
@{
    var i = 0;
}
<div class="body"> 
    <div class="body table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        STT
                    </th>
                    <th>
                        Tên quy định và kiểm tra
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                
                @foreach (var item in Model)
                {
                    i++;
                    <tr>
                        <td>
                            @i
                        </td>
                        <td>
                            @item.Quydinh_Kiemtra.tenqd
                        </td>
                        
                     <td>
                            <a class="material-icons" data-type="confirm" asp-controller="DeCuongchiTiets"
                        asp-action="DeleteQuydinh" asp-route-id="@item.dcqd_id" onclick="return confirm('Bạn chắc chứ?')">delete_forever</a>
                        </td>
       
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>