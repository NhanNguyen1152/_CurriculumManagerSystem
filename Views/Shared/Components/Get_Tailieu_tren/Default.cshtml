@model IEnumerable<_CurriculumManagerSystem.Models.Tailieu>
@{
    var i = 0;
}
<div class="body">
    <div class="body table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        Tên tài liệu
                    </th>
                    <th>
                        Loại tài liệu
                    </th>
                    <th>
                        Tác giả
                    </th>
                    <th>
                        Thông tin khác
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    i++;
                    <tr>
                        <td>
                            @i
                        </td>
                        <td>
                            @item.tentailieu
                            @* @Html.DisplayFor(modelItem => item.DeCuongchiTiet.tenhp_tviet) *@
                        </td>
                        <td>
                            @item.loaitl
                            @* @Html.DisplayFor(modelItem => item.noidung) *@
                        </td>
                        <td>
                            @item.tacgia
                            @* @Html.DisplayFor(modelItem => item.mtchinh) *@
                        </td>
                        <td>
                            @item.thongtinkhac
                            @* @Html.DisplayFor(modelItem => item.mtphu) *@
                        </td>

                        <td>
                            @* <a class="material-icons" asp-controller="DeCuongchiTiets" asp-action="CreateDecuongtailieu"
                            asp-route-id="@item.matl">add_box</a> *@
                            <a class="material-icons" style="cursor: pointed;" data-toggle="modal"
                            data-target="#exampleModalCenters" asp-route-id="@item.matl">add_box</a>

                            <a class="material-icons" asp-controller="DeCuongchiTiets" asp-action="Create"
                            asp-route-id="@item.matl">mode_edit</a>

                            <a class="material-icons" style="cursor: pointed;" data-toggle="modal"
                            data-target="#exampleModalCenter">delete_forever</a>

                            @*****************@
                            <div class="modal fade" id="exampleModalCenters">
                            <form asp-controller="DeCuongchiTiets" asp-action="CreateDecuongtailieu">
                                
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                                            <div class="form-group">
                                                                <input asp-for="@item.matl" value="@item.matl">
                                                            </div>
                                            <div class="modal-footer">
                                                <button type="submit" class="btn btn-secondary"
                                                data-dismiss="modal">Đóng</button>
                                                @* <input type="submit" value="Xóa" class="btn btn-primary" /> *@
                                                <button type="submit" class="btn btn-primary waves-effect">Tao</button>
                                            </div>
                                        </div>
                                    </div>
                                      </form>
                                </div>
                          
                            @*****************@
                            <form>
                                <div class="modal fade" id="exampleModalCenter">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Xác nhận xóa</h5>
                                                <button type="button" class="close"
                                                data-dismiss="modal"><span>&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Bạn có chắc muốn xóa không ?</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="submit" class="btn btn-secondary"
                                                data-dismiss="modal">Đóng</button>
                                                @* <input type="submit" value="Xóa" class="btn btn-primary" /> *@
                                                <button type="submit" class="btn btn-primary waves-effect"
                                                asp-controller="DeCuongchiTiets" asp-action="DeleteMucTieu"
                                                asp-route-id="@item.matl">Xóa</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>