@model IEnumerable<_CurriculumManagerSystem.Models.Chitiet_Chuong>
<h2>10. Lịch trình giảng dạy</h2>
<table cellspacing="0" cellpadding="5" style="text-align:center;border-style: solid;">
	<thead style="text-align:center;">
		<tr>
			<th rowspan="2" style="text-align:center;">
				Tuần học
			</th>
			<th rowspan="2" style="text-align:center;">
				Nội dung
			</th>
			<th colspan="2" style="text-align:center;">
				Số Tiết
			</th>
		</tr>
		<tr>
			<th>
				Lý thuyết
			</th>
			<th>
				Thực Hành
			</th>
		</tr>
	</thead>
	@{
		int temp = 0;
	}
	<tbody>
		@* Plos hang o tren *@
		@*hangbentrai*@
		@foreach (var item in Model.GroupBy(x => x.tuanhoc))
		{
			int numofitem = item.Count();
			@foreach (var item2 in item)
			{
				<tr>
					@if (item.Key != temp)
					{
						temp = item.Key;
						<td rowspan="@numofitem">@item.Key</td>
					}
					<td style="text-align: left; padding-left: 5px">Chương @item2.Chitietmonhoc.chiso. @item2.Chitietmonhoc.tenchuong</td>
					<td>@item2.thoiluonghoc</td>
					<td>@item2.thoiluonghoc_thuchanh</td>
				</tr>
			}
		}
	</tbody>
</table>