    {
      j++;
      if(item.Tailieu.loaitl == loaitl2)
      {
        <p style="
  justify-content: center;font-style: italic;">[@j] @item.Tailieu.tacgia @item.Tailieu.tentailieu @item.Tailieu.thongtinkhac</p> 
