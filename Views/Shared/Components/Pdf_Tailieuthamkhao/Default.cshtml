@model IEnumerable<_CurriculumManagerSystem.Models.DecuongTailieu>
@{
  var loaitl1 = "Học liệu bắt buộc";
  var loaitl2 = "Học liệu tham khảo";
  int i = 0;
  int j = 0;
}
<h2>12. Học liệu tham khảo</h2>
<p><h2>  12.1 @loaitl1</h2></p>
<p>
@foreach (var item in Model)
    {
      i++;
      if(item.Tailieu.loaitl == loaitl1)
