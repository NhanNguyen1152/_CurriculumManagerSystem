@model _CurriculumManagerSystem.Models.DeCuongHinhthuc
@using Microsoft.AspNetCore.Http;
@using System.Data;
<div class="body">
    <form class="form-horizontal" asp-action="CreateDecuonghinhthuc"><b>@ViewBag.ud</b>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input hidden required asp-for="mahp" value=@Context.Session.GetInt32("idDecuong")>
        <div class="row clearfix">
            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                <label asp-for="mahtdg"> </label><span class="text-danger">*</span>
            </div>
            <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                <div class="form-group">

                    <select required class="form-control show-tick" asp-for="mahtdg" asp-items="ViewBag.mahtdg">
                        <option>Vui lòng chọn một </option>
                    </select>

                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-4 col-xs-offset-5">
                <a asp-action="Index" class="btn btn-default waves-effect">Trở lại</a> |
                <button type="submit" class="btn btn-primary waves-effect">Tạo mới</button>
            </div>
        </div>
    </form>
</div>