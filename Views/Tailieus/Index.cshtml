@model IEnumerable<_CurriculumManagerSystem.Models.Tailieu>

@{
    ViewData["Title"] = "Index";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h3 class="titile-table">TÀI LIỆU | <a class="near-titile-table" asp-action="create">Thêm</a></h3>
            </div>
            <div class="body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.tentailieu)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.loaitl)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.tacgia)
                                </th>                               
                                <th>
                                    @Html.DisplayNameFor(model => model.thongtinkhac)
                                </th>  
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tentailieu)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.loaitl)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tacgia)
                                    </td> 
                                    <td>
                                        @Html.DisplayFor(modelItem => item.thongtinkhac)
                                    </td> 
                                    <td>
                                        <a class="material-icons" asp-action="Edit" asp-route-id="@item.matl">mode_edit</a>
                                        <a class="material-icons" asp-action="Delete"
                                        asp-route-id="@item.matl">delete_forever</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>