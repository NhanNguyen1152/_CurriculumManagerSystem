@model _CurriculumManagerSystem.Models.Thoigianhoc

@{
    ViewData["Title"] = "Delete";
}


<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Xóa thời gian học</h4>
            <hr />
            <div class="basic-form">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">@Html.DisplayNameFor(model =>
                            model.yeucauhocphan)</label>
                        <div class="col-sm-9">
                            <input type="text" readonly="readonly" class="form-control-plaintext"
                                value="@Html.DisplayFor(model => model.yeucauhocphan)">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">@Html.DisplayNameFor(model => model.mahp)</label>
                        <div class="col-sm-9">
                            <input type="text" readonly="readonly" class="form-control-plaintext"
                                value="@Html.DisplayFor(model => model.mahp)">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">@Html.DisplayNameFor(model => model.makh)</label>
                        <div class="col-sm-9">
                            <input type="text" readonly="readonly" class="form-control-plaintext"
                                value="@Html.DisplayFor(model => model.makh)">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">@Html.DisplayNameFor(model => model.mahk)</label>
                        <div class="col-sm-9">
                            <input type="text" readonly="readonly" class="form-control-plaintext"
                                value="@Html.DisplayFor(model => model.mahk)">
                        </div>
                    </div>
                </form>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="matg" />
                    <a asp-action="Index">Trở lại</a> |
                    <button type="button" class="btn btn-primary" data-toggle="modal"
                        data-target="#exampleModalCenter">Xóa</button>
                    <!-- Modal -->
                    <div class="modal fade" id="exampleModalCenter">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Xác nhận xóa</h5>
                                    <button type="button" class="close" data-dismiss="modal"><span>&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <p>Bạn có chắc muốn xóa không ?</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                                    <input type="submit" value="Xóa" class="btn btn-danger" />
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


