@model _CurriculumManagerSystem.Models.Thoigianhoc

@{
    ViewData["Title"] = "Delete";
}


<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h3 class="titile-table">
                    Xóa thời gian học
                </h3>
            </div>
            <div class="body">
                <form class="form-horizontal" asp-action="Edit">
                    <div class="row clearfix">
                        <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                            <label asp-for="yeucauhocphan">@Html.DisplayNameFor(model => model.yeucauhocphan)</label>
                        </div>
                        <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                            <div class="form-group">

                                <input disabled="true" type="text" asp-for="yeucauhocphan" class="form-control"
                                    placeholder="Yêu cầu học phần">

                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                            <label asp-for="mahp">@Html.DisplayNameFor(model => model.mahp)</label>
                        </div>
                        <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                            <div class="form-group">

                                <select disabled="true" class="form-control show-tick" asp-for="mahp"
                                    asp-items="ViewBag.mahp">
                                    @* <option>Vui lòng chọn một</option> *@
                                </select>

                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                            <label asp-for="makh">@Html.DisplayNameFor(model => model.makh)</label>
                        </div>
                        <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                            <div class="form-group">

                                <select disabled="true" class="form-control show-tick" asp-for="makh"
                                    asp-items="ViewBag.makh">
                                    @* <option>Vui lòng chọn một</option> *@
                                </select>

                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                            <label asp-for="makh">@Html.DisplayNameFor(model => model.mahk)</label>
                        </div>
                        <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                            <div class="form-group">

                                <select disabled="true" class="form-control show-tick" asp-for="mahk"
                                    asp-items="ViewBag.mahk">
                                    @* <option>Vui lòng chọn một</option> *@
                                </select>

                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-4 col-xs-offset-5">
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="matg" />
                                <a asp-action="Index" class="btn btn-default waves-effect">Trở lại</a> |
                                <button type="button" class="btn btn-primary" data-toggle="modal"
                                    data-target="#exampleModalCenter">Xóa</button>
                                <!-- Modal -->
                                <div class="modal fade" id="exampleModalCenter">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Xác nhận xóa</h5>
                                                <button type="button" class="close"
                                                    data-dismiss="modal"><span>&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Bạn có chắc muốn xóa không ?</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                    data-dismiss="modal">Đóng</button>
                                                <input type="submit" value="Xóa" class="btn btn-primary" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
