@model _CurriculumManagerSystem.Models.Thoigianhoc

@{
    ViewData["Title"] = "Details";
}


<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Chi tiết thời gian học</h4>
            <hr />
            <div class="basic-form">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">@Html.DisplayNameFor(model =>
