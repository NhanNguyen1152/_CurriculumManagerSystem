@model _CurriculumManagerSystem.Models.Thoigianhoc

@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Sửa thời gian học</h3>
                    <hr />
                    <div class="form-validation">
                        <form asp-action="Edit" class="form-valide">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="matg" />
                            <div class="form-group row">
                                <label asp-for="yeucauhocphan" class="col-lg-4 col-form-label" for="val-suggestions">Yêu cầu học phần<span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-6">
                                    <textarea  asp-for="yeucauhocphan" class="form-control" placeholder="Yêu cầu học phần"></textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="mahp" class="col-lg-4 col-form-label" for="val-skill">Mã đề cương chi tiết<span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-6">
                                    <select asp-for="mahp" class="form-control" asp-items="ViewBag.mahp"></select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="makh" class="col-lg-4 col-form-label" for="val-skill">Mã khóa học<span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-6">
                                    <select asp-for="makh" class="form-control" asp-items="ViewBag.makh"></select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="mahk" class="col-lg-4 col-form-label" for="val-skill">Mã học kỳ<span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-6">
                                    <select asp-for="mahk" class="form-control" asp-items="ViewBag.mahk"></select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-lg-8 ml-auto">
                                    <a asp-action="Index" lass="btn btn-primary">Trở lại</a> |
                                    <input type="submit" class="btn btn-primary" value="Sửa"></input>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

