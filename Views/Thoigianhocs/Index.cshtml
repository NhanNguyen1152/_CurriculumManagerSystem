@model IEnumerable<_CurriculumManagerSystem.Models.Thoigianhoc>

@{
    ViewData["Title"] = "Index";
}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    BASIC EXAMPLE
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button"
                            aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.yeucauhocphan)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.mahp)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.makh)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.mahk)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.yeucauhocphan)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DeCuongchiTiet.tenhp_tviet)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Khoahocs.tenkh)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Hockys.tenhk)
                                    </td>
                                    <td>
                                        <a class="material-icons" asp-action="Edit" asp-route-id="@item.matg">mode_edit</a> 
                                        <a class="material-icons" asp-action="Delete" asp-route-id="@item.matg">delete_forever</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
